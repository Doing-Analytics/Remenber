<h1>新增會員資料</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li class="text-rose-500"><%= msg%></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <span>信箱：</span>
    <%= f.email_field :email %>
  </div>
  <div>
    <span>密碼：</span>
    <%= f.password_field :crypted_password %>
  </div>
  <div>
    <span>確認密碼：</span>
    <%= f.password_field :crypted_password_confirmation %>
  </div>

  <%= f.submit '送出' %>
<% end %>